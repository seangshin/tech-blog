<div class="text-center">
  <h1>{{name}}</h1>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{date_created}}</p>


  {{#if logged_in}}<!--check if user logged in-->
  {{#if comments.length}}<!--check if comments exist-->
</div>
<div>
  <p>Comments:</p>
  {{#each comments as |comment|}}
  <p>Comment from {{user_id}} on {{comment.date_created}}</p>
  <p>{{comment.content}}</p>
  <div class="col-md-4">
    <button class="btn btn-sm btn-danger deleteBtn" data-id="{{comment.id}}">DELETE</button>
  </div>
  {{/each}}

  {{else}}<!--if no comments exist-->
  <p>No comments</p>
  
  {{/if}}
  

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="post-comments">Add a comment:</label>
      <input class="form-input" type="text" id="comments" name="post-comments" />
      <button class="btn btn-primary submitBtn" type="submit" data-id="{{id}}">Submit</button>
    </div>
  </form>
</div>
{{/if}}
<script src="/comment.js"></script>





