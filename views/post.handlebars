<div class="text-center">
  <h1>{{name}}</h1>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{date_created}}</p>
  {{#if logged_in}}
  {{#if comments.length}}
</div>
<div>
  <p>Comments:</p>
  {{#each comments as |comment|}}
  <p>Comment from {{user_id}} on {{comment.date_created}}</p>
  <p>{{comment.content}}</p>
  {{/each}}
  {{else}}
  <p>No comments</p>
  {{/if}}
  

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="post-comments">Add a comment:</label>
      <input class="form-input" type="text" id="comments" name="post-comments" />
      <button class="btn btn-primary submitBtn" type="submit" data-id="{{id}}">Submit</button>
    </div>
  </form>
</div>

<script src="/post.js"></script>
{{/if}}