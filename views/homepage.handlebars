{{#each comments as |comment| }}
<div class="row mb-4 p-4">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{comment.post_id}}">{{comment.post.name}}</a>
    </h2>
    <p>Created by {{comment.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.post.description}}
    </p>
    <p>
      Comments:
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}